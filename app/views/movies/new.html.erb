<% content_for :title, "New movie" %>

<div class="form">
  <div class="welcome">
    <h1>New movie</h1>
  </div>

  <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

  <%= form_with model: @movie, class: 'form' do |form| %>
    <div class="form-input">
      <%= form.label :title, "Title" %>
      <%= form.text_field :title, required: true, autofocus: true, placeholder: "Type the movie title", maxlength: 50 %>
    </div>

    <div class="form-input">
      <%= form.label :description, "Description" %>
      <%= form.text_field :description, required: true, placeholder: "Type a short summary", maxlength: 200 %>
    </div>
    <%= form.submit "Save", class: "submit-form" %>
  <% end %>

  <div class="links">
    <%= link_to "Back to movies", movies_path %>
  </div>
</div>
