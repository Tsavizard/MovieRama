<div class="form">
  <div class="welcome">
    <h1>Sign-up</h1>
    <p>Welcome! Please enter your email address and password to sign up.</p>
  </div>

  <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
  <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

  <%= form_with url: users_path, scope: :user, class: 'form' do |form| %>
    <div class="form-input">
        <%= form.label :username, "Username " %>
        <%= form.text_field :username, required: true, autofocus: true, placeholder: "Enter your username", value: params[:email_address] %>
    </div>

    <div class="form-input">
        <%= form.label :email_address, "Email" %>
        <%= form.email_field :email_address, required: true,  placeholder: "Enter your email address", value: params[:email_address] %>
    </div>

    <div class="form-input">
        <%= form.label :password, "Password" %>
        <%= form.password_field :password, required: true, placeholder: "Enter your password", maxlength: 72 %>
    </div>

    <div class="form-input">
        <%= form.label :password_confirmation, "Re-type password" %>
        <%= form.password_field :password_confirmation, required: true, placeholder: "Confirm password", maxlength: 72 %>
    </div>

    <%= form.submit "Sign up", class: "submit-form" %>
  <% end %>

  <div class="links">
    <%= link_to "Already have an account?", login_path %>
  </div>
</div>
