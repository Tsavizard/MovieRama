
<div class="login-form">
  <div class="welcome">
    <h1>Forgot your password?</h1>
  </div>

  <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

  <%= form_with url: passwords_path, class: 'form' do |form| %>
    <div class="form-input">
        <%= form.label :email_address, "Email" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email_address", placeholder: "Enter your email address", value: params[:email_address] %>
    </div>

    <div class="form-input">
        <%= form.label :password, "Password" %>
        <%= form.password_field :password, required: true, placeholder: "Enter your password", maxlength: 72 %>
    </div>

    <div class="form-input">
        <%= form.label :password_confirmation, "Re-type password" %>
        <%= form.password_field :password_confirmation, required: true, placeholder: "Confirm password", maxlength: 72 %>
    </div>

    <%= form.submit "Reset password",class: "submit-form" %>
  <% end %>

  <div class="links">
    <%= link_to "Remember your password?", new_session_path %>
    <%= link_to "Don't have an account?", signup_path %>
  </div>
</div>
